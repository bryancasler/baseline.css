    "build": "npm run compile && npm run minify"
  },
  "dependencies": {
    "normalize.css": "^4.2.0"
  },
  "devDependencies": {
    "postcss": "^5.0.21",
    "postcss-clean": "^1.0.2",
    "postcss-cli": "^2.5.2",
    "postcss-cssnext": "^2.7.0",
    "postcss-import": "^8.1.2",
    "stylelint": "^6.8.0",
    "stylelint-config-standard": "^9.0.0"
  }
